<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tipsyrater.hello" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Tipsy-Rater</name>

    <content src="index.html" />

    <!-- plugins -->
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="www/images/manifest/icon-48x48.png" width="320" height="480"/>
        <splash src="www/images/manifest/icon-72x72.png" width="640" height="960"/>
        <splash src="www/images/manifest/icon-96x96.png" width="768" height="1024"/>
        <splash src="www/images/manifest/icon-144x144.png" width="1536" height="2048"/>
        <splash src="www/images/manifest/icon-192x192.png" width="1024" height="768"/>
        <splash src="www/images/manifest/icon-512x512.png" width="2048" height="1536"/>
    </platform>
    <engine name="ios" spec="~4.3.0" />

    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="10000"/>
    <preference name="FadeSplashScreen" value="true"/>
    <gap:plugin name="org.apache.cordova.splashscreen" />

</widget>
